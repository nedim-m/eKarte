@model List<eKarte.Models.ViewModels.SearchViewModel>

@{
    Layout = null;
}

@if (Model.Count() > 0)
{


    <div>

        <table id="tblData" class="table table-striped table-bordered" style="width:100%">
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">@obj.Letovi.Naziv</td>
                    <td width="15%">@obj.Letovi.AerodromOd.Naziv</td>
                    <td width="15%">@obj.Letovi.AerodromDo.Naziv</td>
                    <td width="10%">@obj.Cijena</td>
                    <td width="10%"><a class="btn btn-success">Kupi</a></td>


                </tr>
            }






        </table>
    </div>
}
else { 
    <h2 class="text-center text-danger">Žao nam je odabrani let ne postoji</h2>
}

