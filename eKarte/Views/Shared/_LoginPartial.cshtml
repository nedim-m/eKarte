@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager




@if (SignInManager.IsSignedIn(User))
{

    <div class="form-row w3-right">
    <a class="w3-bar-item w3-button w3-right w3-hover-blue w3-text-grey small" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Pozdrav, @User.Identity.Name!</a>


    <form  asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" class="w3-bar-item w3-button w3-right w3-hover-blue w3-text-grey"><i class="fas fa-sign-out-alt"></i></button>
    </form>
   </div>

}
else
{



    <a asp-area="Identity" asp-page="/Account/Login" class="w3-bar-item w3-button w3-right w3-hover-blue w3-text-grey"><i class="fas fa-sign-in-alt"></i></a>
}

